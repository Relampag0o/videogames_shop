<odoo>
  <data>
  <!-- VIDEOGAMES VIEW-->
    
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">videogames_shop.product.form</field>
        <field name="model">videogames_shop.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="platform" widget="image"/>
                        <field name="genre"/>
                        <field name="available_stock"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>    




     <record model="ir.actions.act_window" id="book_shop.books_action_window">
      <field name="name">VideoGames Management</field>
      <field name="res_model">videogames_shop.product</field>
      <field name="view_mode">tree,form</field>
    </record>





















  </data>
</odoo>